<turbo-stream action="prepend" target="comments-list">
  <template>
    <div class="card mb-4 w-100">
      <div class="card-body">
        <div class="d-flex justify-content-start">
          <div class="d-flex flex-row align-items-center">
            <% if comment.user.profile_picture.attached? %>
              <img class="rounded-circle shadow-1-strong" src="<%= url_for(comment.user.profile_picture) %>" alt="avatar" width="25" height="25" />
            <% end %>
            <p class="small mb-0 ms-2 me-2"><%= comment.user.name %></p>
          </div>
          <div class="d-flex flex-row align-items-center">
            <p class="small text-muted mb-0"><%= comment.content %></p>
          </div>
        </div>
        <p class="small text-muted mb-0 d-flex justify-content-end"><%= comment.created_at.strftime("%B %d, %Y %H:%M:%S") %></p>
      </div>
    </div>
  </template>
</turbo-stream>
